<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ImagePane">

        <!-- Params -->
        <attr name="ip_image_size" format="reference|integer|dimension"/>
        <attr name="ip_image_stub_loading" format="reference"/>
        <attr name="ip_image_background" format="reference"/>
        <attr name="ip_image_corner_radius" format="integer|float"/>

        <attr name="ip_cluster_size" format="reference|integer|dimension"/>
        <attr name="ip_cluster_text_size" format="reference|dimension"/>
        <attr name="ip_cluster_text_style" format="enum">
            <enum name="NORMAL" value="0"/>
            <enum name="BOLD" value="1"/>
            <enum name="ITALIC" value="2"/>
            <enum name="BOLD_ITALIC" value="3"/>
        </attr>
        <attr name="ip_cluster_text_color" format="reference|color"/>
        <attr name="ip_cluster_background" format="reference"/>
        <attr name="ip_cluster_corner_radius" format="integer|float"/>

        <attr name="ip_show_items_count" format="reference|integer"/>

        <!-- Actions -->
        <attr name="ip_on_item_click" format="reference"/>
        <attr name="ip_on_cluster_click" format="reference"/>

    </declare-styleable>

</resources>